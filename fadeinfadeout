<!DOCTYPE html>
<html>
<head>
<script type="text/javascript" src="jquery-3.4.1.min.js"></script>
<script type="text/javascript">
$(document).ready(function(){
	$("#btn-satu").click(function(){
		$(".kotak").fadeOut('slow');
	});
	$("#btn-dua").click(function(){
		$(".kotak").fadeIn('slow');
	});
	$("#btn-tiga").click(function(){
		$(".kotak").fadeTo('slow', 0.3);
	});
});
</script>
<style type="text/css">
.kotak {
width: 300px;
height: 300px;
background: pink;
border: 1px solid black;
padding: 5px;
}
</style>
</head>
<body>
<div class="kotak"></div>
<button id="btn-satu">Fade Out</button>
<button id="btn-dua">Fade In</button>
<button id="btn-tiga">Fade To</button>
</body>
</html>
